<!--%= render './shared/showbanner' %-->
<div class="showbanner" style=" background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= asset_path 'banner.jpg' %>);height: 380px">
  <div class="container" style = "padding-top: 96px;">
    <h1> <%= @yogaclass.title %> </h1>
  </div>
</div>

<div class="main-container">

  <div class="card-description">
    <div class = "container-description"><h3>Class Description</h3></div>
    <div class = "container"><h5><%= @yogaclass.description %></h5></div>

  <!-- included from review lecture to review -->
 <h2><%= pluralize @yogaclass.reviews.size, "review" %></h2>

<div id="reviews">
  <% if @yogaclass.reviews.blank? %>
    Be the first to leave a review for <%= @yogaclass.title %>
  <% else %>
    <% @yogaclass.reviews.each do |review| %>
      <p><%= review.content %></p>
    <% end %>
  <% end %>
</div>

<%= simple_form_for([ @yogaclass, @review ]) do |f| %>
  <%= f.input :content, as: :text %>
  <%= f.button :submit %>
<% end %>
  </div>



  <div class="card-sidebar">
   <div class="title"> <h4>Booking Details</h4></div>
    <p><i class="fas fa-map-marked pr-3"> </i><%=@yogaclass.address%></p>
    <p><i class="fas fa-calendar-day pr-3"></i><%=@yogaclass.start_at%></p>
    <p><i class="fas fa-history pr-3"></i><%= @yogaclass.duration%></p>
    <p><i class="fas fa-money-bill-wave pr-3"></i><%= @yogaclass.price%></p>
    <div class="bookings"> <%= link_to 'Book Class', yogaclass_bookings_path(@yogaclass), method: :POST ,class: "btn btn-gradient"%></div>

  </div>

</div>
