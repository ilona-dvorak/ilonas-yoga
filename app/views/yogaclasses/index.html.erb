<div class="cards">
  <% @yogaclasses.each do |yogaclass| %>
  <div class="card-trip">
    <%= link_to yogaclass_path(yogaclass) do %>
      <% if yogaclass.photo.attached? %>
        <%= cl_image_tag yogaclass.photo.key, height: 200, crop: :fit %>
      <% else %>
        <img src="https://source.unsplash.com/400x200/?yoga" alt="Yoga Classes with Ilona">
      <% end %>
    <% end %>
    <div class="card-trip-infos">
      <div>
        <h2><%= link_to yogaclass.title, yogaclass_path(yogaclass) %></h2>
        <p><%= yogaclass.description %></p>
      </div>
      <h2 class="card-trip-pricing">â‚¬<%= yogaclass.price %></h2>
<!--       <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" /> -->
    </div>
  </div>
  <% end %>
</div>
