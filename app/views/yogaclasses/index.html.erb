
<div class="cards">
  <% @yogaclasses.each do |yogaclass| %>
  <div class="card-trip">
    <%= link_to yogaclass_path(yogaclass) do %>
      <% if yogaclass.photo.attached? %>
        <%= cl_image_tag yogaclass.photo.key, height: 200, crop: :fit, class: "card-image" %>
      <% else %>
        <%= image_tag "yoga-at-the-beach.jpg", class: "card-image" %>
      <% end %>
    <% end %>
    <div class="card-trip-infos">
      <div class="yogaclass-info">
        <h2><%= link_to yogaclass.title, yogaclass_path(yogaclass) %></h2>
        <p><%= yogaclass.description %></p>
      </div>
      <h2 class="card-trip-pricing">â‚¬<%= yogaclass.price %></h2>
      <% if yogaclass.user.photo.attached? %>
        <%= cl_image_tag yogaclass.user.photo.key, class: "card-trip-user avatar-bordered"%>
      <% else %>
        <%= image_tag "avatar-placeholder.jpg", class: "card-trip-user avatar-bordered" %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>

<div id="map"
  style="width: 100%; height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
