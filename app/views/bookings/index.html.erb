<div class="form-container">
  <% @bookings.each do |booking| %>
  <div class="card-product">
    <% if booking.yogaclass.photo.attached? %>
      <%= cl_image_tag booking.yogaclass.photo.key, height: 200, crop: :fit %>
    <% else %>
      <%= image_tag "yoga-at-the-beach.jpg" %>
    <% end %>

      <div class="card-product-infos">
        <h2><%= link_to booking.yogaclass.title, yogaclass_path(booking.yogaclass) %></h2>
        <h3>with <%= booking.yogaclass.user.first_name %> <%= booking.yogaclass.user.last_name %></h3>
        <p><i class="fas fa-map-marked pr-3"></i><%= booking.yogaclass.address %></p>
        <p><i class="fas fa-calendar-day pr-3"></i><%= booking.yogaclass.start_at %></p>
      </div>
      <div class="cancel">
        <%= link_to "Cancel", booking_path(booking),
          method: :delete,
          data: { confirm: "Do you really want to cancel your booking?" },
          class: 'btn btn-flat'
        %>
      </div>

  </div>
  <% end %>
</div>
